@model Core.Entity.Subscriber

@{
    ViewBag.Title = "Create";
}


<div>

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home">
                    <img src="~/Content/logo_ICMC.jpg" alt="">
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#">Trabalho Final</a>
                    </li>
                    <li>
                        <a href="#">Lucas Avelino Sodré Santos</a>
                    </li>
                    <li>
                        <a href="#">NUSP 7239086</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Login:</h1>
                @using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "form-inline" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <fieldset>
                        <legend>Adicionar um novo Subscriber</legend>
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.Label("Nome")
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Email)
                            </div>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="editor-label">
                                @Html.Label("Criar ativo?")
                            </div>
                            <div class="editor-field">
                                @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-control", style = "margin-left: 2em;" })
                                @Html.ValidationMessageFor(model => model.IsActive)
                            </div>
                        </div>
                    </fieldset>
    <br />
        <div class="row">
            <input class="btn btn-success col-md-5 col-lg-5 col-sm-5" style="margin-left: 1em;" type="submit" value="Criar conta" />
        </div>
                }
    </div>
        </div>
    </div>

    <hr>



</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/jquery.js")
}
